<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgrount_primary"
                android:orientation="vertical"
                android:paddingBottom="@dimen/lv_row_padding_botton"
                android:paddingLeft="@dimen/activity_padding_left"
                android:paddingRight="@dimen/activity_padding_right"
                android:paddingTop="@dimen/lv_row_padding_top">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/font_size_h20">

                    <TextView
                        android:id="@+id/tv_wellcome_title"
                        style="@style/AppTheme.TextViewPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="Bem-vindo ao VendasUp"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/font_size_h8" />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="@string/tv_user"
                        android:paddingTop="@dimen/font_size_h8" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="@string/tv_password"
                        android:inputType="textPassword"
                        android:paddingTop="@dimen/font_size_h8" />

                    <EditText
                        android:id="@+id/et_password_re"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="@string/tv_password_re"
                        android:inputType="textPassword"
                        android:paddingTop="@dimen/font_size_h8" />


                    <Button
                        android:id="@+id/btn_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/font_size_h8"
                        android:background="@drawable/button_corners_green"
                        android:text="@string/btn_singup"
                        android:textColor="@color/white" />



                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/notification_initial_position"
        android:background="@drawable/notification_warning"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>