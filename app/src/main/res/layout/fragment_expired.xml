<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrount_primary"
        android:paddingTop="@dimen/lv_row_padding_top"
        android:paddingBottom="@dimen/lv_row_padding_botton"
        android:paddingLeft="@dimen/activity_padding_left"
        android:paddingRight="@dimen/activity_padding_right">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <!-- Imagem -->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_expired_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_expired_version_registered"
                style="@style/AppTheme.TextViewPrimary"
                android:textSize="@dimen/font_size_h8"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_expired_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message_expired_version_demo"
                style="@style/AppTheme.TextViewSecundary"
                android:layout_marginTop="@dimen/font_size_h8"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />



            <Button
                android:id="@+id/btn_expired_sync"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_sincronizar"
                android:background="@drawable/button_corners"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/font_size_h8"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/tv_expired_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.TextViewSecundary"
                android:layout_marginTop="@dimen/font_size_h5"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_notification"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/notification_initial_position"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/notification_warning"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="" />


</RelativeLayout>
