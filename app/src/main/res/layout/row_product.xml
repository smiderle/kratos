<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UseCompoundDrawables"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/lv_row_padding">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descricao"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:id="@+id/lblProdutoDescricao"
            android:textSize="@dimen/font_size_h4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/primary_text_default_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Est:"
            android:id="@+id/txtView"
            android:layout_below="@+id/lblProdutoDescricao"
            android:layout_alignLeft="@+id/lblProdutoDescricao"
            android:layout_alignStart="@+id/lblProdutoDescricao"
            android:textSize="@dimen/font_size_h3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10,00"
            android:id="@+id/lblProdutoEstoque"
            android:textSize="@dimen/font_size_h3"
            android:layout_alignTop="@+id/txtView"
            android:layout_toRightOf="@+id/txtView"
            android:layout_toEndOf="@+id/txtView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preco"
            android:id="@+id/textView"
            android:textSize="@dimen/font_size_h3"
            android:layout_below="@+id/lblProdutoDescricao"
            android:layout_toLeftOf="@+id/lblProdutoPreco"
            android:layout_toStartOf="@+id/lblProdutoPreco"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/lblProdutoPreco"
            android:textSize="@dimen/font_size_h3"
            android:layout_below="@+id/lblProdutoDescricao"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:id="@+id/imgImagemProduto"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

    </RelativeLayout>

</LinearLayout>
