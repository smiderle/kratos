<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/parallax_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_height_main"
            android:orientation="vertical"
            android:background="@color/indigo_500">
            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/iv_height_main"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher"/>

        </LinearLayout>


        <br.com.doubletouch.vendasup.presentation.view.components.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/parallax_tab_height"
            android:layout_gravity="bottom"
            android:background="@color/primary_color" />
    </FrameLayout>

</FrameLayout>