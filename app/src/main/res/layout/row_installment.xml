<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/lv_row_padding_top"
    android:paddingBottom="@dimen/lv_row_padding_botton"
    android:paddingLeft="@dimen/activity_padding_left"
    android:paddingRight="@dimen/activity_padding_right"
    android:background="@color/backgrount_primary">

    <!--<View
        android:id="@+id/iv_order_status"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/status_success"/>-->


    <TextView
        android:id="@+id/tv_installment_descrition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_description"
        style="@style/AppTheme.TextViewInListViewPrimary"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/space_imageview_to_textview"
        android:layout_toRightOf="@+id/iv_order_status"/>


    <TextView
        android:id="@+id/tv_installment_descrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_installment_descrition_title"
        android:layout_alignBottom="@+id/tv_installment_descrition_title"
        android:layout_toRightOf="@+id/tv_installment_descrition_title"
        android:layout_marginLeft="@dimen/space_textview_to_textview"
        android:text="Descrição"
        style="@style/AppTheme.TextViewInListViewSecundory"/>


    <TextView
        android:id="@+id/tv_installment_condition_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_installment_descrition_title"
        android:layout_below="@+id/tv_installment_descrition_title"
        android:text="@string/tv_installment_conditions"
        style="@style/AppTheme.TextViewInListViewPrimary"/>

    <TextView
        android:id="@+id/et_installment_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_installment_condition_title"
        android:layout_alignBottom="@+id/tv_installment_condition_title"
        android:layout_toRightOf="@+id/tv_installment_condition_title"
        android:layout_marginLeft="@dimen/space_textview_to_textview"
        android:text="0"
        style="@style/AppTheme.TextViewInListViewSecundory" />

</RelativeLayout>