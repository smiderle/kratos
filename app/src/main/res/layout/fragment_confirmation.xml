<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgrount_primary"
        android:paddingTop="@dimen/lv_row_padding_top"
        android:paddingBottom="@dimen/lv_row_padding_botton"
        android:paddingLeft="@dimen/activity_padding_left"
        android:paddingRight="@dimen/activity_padding_right">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <!-- Imagem -->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wellcome_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estamo quase lá!!"
                android:textSize="@dimen/font_size_h8"
                style="@style/AppTheme.TextViewPrimary"
                android:textColor="@color/primary_color"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_wellcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informe o código que enviamos no seu e-mail."
                android:textSize="@dimen/font_size_h6"
                style="@style/AppTheme.TextViewSecundary"
                android:gravity="center"
                android:paddingTop="@dimen/font_size_h10"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/et_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="4"
                android:inputType="number"
                android:paddingTop="@dimen/font_size_h8"
                android:textSize="@dimen/font_size_h12" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_signin"
                android:id="@+id/btn_validar"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_corners_background_white"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/font_size_h8" />



        </LinearLayout>



    </LinearLayout>




    <Button
        android:id="@+id/btn_notification"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/notification_initial_position"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/notification_warning"
        android:textColor="@color/white"
        android:text=""
        android:textAllCaps="false"/>

</RelativeLayout>