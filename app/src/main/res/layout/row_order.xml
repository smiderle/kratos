<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/lv_row_padding_top"
    android:paddingBottom="@dimen/lv_row_padding_botton"
    android:paddingLeft="@dimen/activity_padding_left"
    android:paddingRight="@dimen/activity_padding_right"
    android:background="@color/backgrount_primary">

    <View
        android:id="@+id/iv_order_status"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/status_success"/>


    <TextView
        android:id="@+id/tv_order_customer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_customer_whit_colon"
        style="@style/AppTheme.TextViewInListViewPrimary"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/space_imageview_to_textview"
        android:layout_toRightOf="@+id/iv_order_status"/>


    <TextView
        android:id="@+id/tv_order_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_order_customer_title"
        android:layout_alignBottom="@+id/tv_order_customer_title"
        android:layout_toRightOf="@+id/tv_order_customer_title"
        android:layout_marginLeft="@dimen/space_textview_to_textview"
        android:text="Nome do Cliente"
        style="@style/AppTheme.TextViewInListViewSecundory"/>


    <TextView
        android:id="@+id/tv_order_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_order_customer_title"
        android:layout_below="@+id/tv_order_customer_title"
        android:text="@string/tv_order_number_with_colon"
        style="@style/AppTheme.TextViewInListViewPrimary"/>

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_order_number_title"
        android:layout_alignBottom="@+id/tv_order_number_title"
        android:layout_toRightOf="@+id/tv_order_number_title"
        android:layout_marginLeft="@dimen/space_textview_to_textview"
        android:text=""
        style="@style/AppTheme.TextViewInListViewSecundory" />

    <TextView
        android:id="@+id/tv_order_total_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_money"
        style="@style/AppTheme.TextViewInListViewPrimary"
        android:layout_alignBottom="@+id/tv_order_total"
        android:layout_toLeftOf="@+id/tv_order_total"
        android:layout_toStartOf="@+id/tv_order_total" />

    <TextView
        android:id="@+id/tv_order_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/AppTheme.TextViewInListViewSecundory"
        android:layout_marginLeft="@dimen/space_textview_to_textview"
        android:layout_alignTop="@+id/tv_order_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:id="@+id/tv_order_emissao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_number"
        android:layout_toRightOf="@+id/tv_order_emissao_title"
        android:text=""
        android:layout_marginLeft="5dp"
        style="@style/AppTheme.TextViewInListViewSecundory" />

    <TextView
        android:id="@+id/tv_order_emissao_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_order_emissao"
        android:layout_alignBottom="@+id/tv_order_emissao"
        android:layout_alignLeft="@+id/tv_order_number_title"
        android:text="@string/tv_emissao_with_colun"
        style="@style/AppTheme.TextViewInListViewPrimary"/>

</RelativeLayout>