<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="AppTheme.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.TextViewHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/header_margin</item>
        <item name="android:textSize">@dimen/font_size_h5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="AppTheme.TextViewPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_h5</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="AppTheme.TextViewSecundary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_h3</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="AppTheme.TextViewInListViewPrimary" parent="AppTheme.TextViewPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.TextViewInListViewSecundory" parent="AppTheme.TextViewSecundary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--
        Theme customizado
        Referencia : https://developer.android.com/training/material/theme.html
        Altera o tema do action bar, como cores por exemplo.
     -->
    <style name="AppTheme.Kratos.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Kratos.ActionBar</item>

        <!-- Remove a sombra de baixo do action bar -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Cor do botÃ£o Action Float button-->
        <item name="colorAccent">@color/primary_color</item>
    </style>


    <!-- Action bar -->
    <style name="Kratos.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/Kratos.Actionbar.Title</item>
        <item name="background">@color/primary_color</item>
    </style>

    <!-- Texto do ActionBar -->
    <style name="Kratos.Actionbar.Title" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinerLogin">
        <item name="android:background">@drawable/spinner_corners</item>
        <!--item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item-->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
        <item name="android:color">#FFFF</item>

    </style>


</resources>
